@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Instituto Tecnológico Goya</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FeriaDeLibro.Web.styles.css" asp-append-version="true" />
    <link rel="icon" type="image/jpg" href="/images/LogoITG.png" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light  border-bottom box-shadow mb-3">
            <div class="container-fluid d-flex align-items-center">

                <a href="https://itgoya.gob.ar/" target="_blank" class="text-white"><img src="/images/LogoITG.png" alt="Logo" style="height: 40px; margin-right: 10px;"></a>
                       
                
                <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">Feria del Libro</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 d-flex">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Eventos</a>
                        </li>
                        <!-- bropdown menu-->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                ¿Que estudiar?
                            </a>
                            <ul class="dropdown-menu">
                                <li class="nav-item">
                                    <a class="nav-link text-black dropdown-item " asp-area="" asp-controller="Home" asp-action="Programming">Programación</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-black dropdown-item" asp-area="" asp-controller="Home" asp-action="PcManager">Operador PC</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-black  dropdown-item" asp-area="" asp-controller="Home" asp-action="PcRepair">Reparación PC</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-black  dropdown-item" asp-area="" asp-controller="Home" asp-action="Mecatronic">Mecatrónica</a>
                                </li>
                            </ul>
                        </li>
                        
                        
                        @if (@HttpContextAccessor.HttpContext.Session.GetString("UsuarioModel") != null)
                        {
                            <li class="nav-item ms-sm-auto">
                                <!--va a la derecha en mantallas mayores a 576px-->
                                <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Admin">Administrar</a>
                            </li>
                            <div>
                                <a class="nav-link text-white" asp-area="" asp-controller="Login" asp-action="CerrarSesion">Cerrar sesion</a>
                            </div>
                        }else
                        {
                            <li class="nav-item ms-sm-auto">
                                <!--va a la derecha en mantallas mayores a 576px-->
                                <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Admin">Admin</a>
                            </li>
                        }

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - by <a href="https://www.linkedin.com/in/gonzalo-gomez12" target="_blank">Gonzalo Gomez </a>-
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <partial name="_ValidationScriptsPartial" />

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
